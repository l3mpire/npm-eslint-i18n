{
  "scopeName": "text.html.handlebars.t",
	"injectionSelector": "L:meta.function.inline.other.handlebars",
	"patterns": [{ "include": "#t" }],
  "repository": {
    "single": {
      "match": "(?<=_t(\\s){1,}')[^']+",
      "name": "t.single"
    },
		"double": {
      "match": "(?<=_t(\\s){1,}\")[^\"]+",
      "name": "t.double"
    },
		"standard": {
			"match": "[^{}]",
			"name": "t.standard"
		},
		"param": {
			"match": "\\{\\d\\}",
			"name": "t.param"
		},
		"tag": {
			"match": "<[^>]*>",
			"name": "t.tag"
		},
		"t": {
      "name": "t.group",
      "patterns": [{ "include": "#param" }, { "include": "#tag" }, { "include": "#standard" }]
    }
  }
}
